### generate with B-splines ###

th.true <- c(rep(0,1),.1,.8,0,rep(0,3))
B <- bs(1:40, degree = 3, knots = 40*seq(.2,.8,by=.2))
w <- B %*% th.true #rnorm(4,0,0.1)
#w <- exp(w)
#w <- w / sum(w)

plot( 1:40, w, type="l", col="blue", lwd=2)

# th.trueo <- c(2,7,8,3)# 0, 0)
# B <- bs(1:40, degree = 4)
# wo <- B %*% th.trueo #rnorm(4,0,0.1)
# wo <- exp(wo)
# wo <- wo / sum(wo)



# linear predictor
Xw  <- X * w[,1]
beta <- c(-1.5,1)
eta <- beta[1] + beta[2] * colSums(Xw)


# linear predictor
# Xwo  <- Xo * wo[,1]
# beta <- c(-1,1,-1)
# eta <- beta[1] + beta[2] * colSums(Xw) + beta[3] * colSums(Xwo)

# generation through latent variable method

tau <- 0.5
pr <- dlcdfALD( -eta, tau, 0, 1 )
y <- rbinom( n, size=1, prob = 1-pr)

X2 <- rbind( X , matrix( rnorm(n*(l)), ncol=n) )
#X2 <- rbind( X,  matrix( rnorm(2*n*l), ncol=n) )
#X2 <- rbind(matrix( rnorm(n*(l)), ncol=n), X )

fitted <- dlvarsel( y, W = NULL, X = X, m=3, tau=0.5, l=40, 
                        weight.scheme = c("b-spline"), 
                        nsamp = 10^4, burn = 10^4, thin = 1, sampmeth = "smmala", dl.varsel = FALSE )

#th.true <- rnorm(4,0,0.1)
me <- apply( fitted$samples$beta, 1, mean )
me <- me[1:7]
# 
  th.true <- me#th.trueo
  B <- bs(1:40, degree = 3, knots=40*seq(.2,.8,by=.2))
  w <- B %*% me
  w <- exp(w)
  w <- w / sum(w)
  points( 1:40, w, type="l", col="green", lwd=3.5 )

# 
w <- B %*% th.true 
plot( 1:l, w, type="l", col="blue", lwd=2.5, ylim=c(0,.8) )
for( k in sample(1:10^4, size=100, replace = F) )
{
  #B <- bs(1:40, degree = 2)
  w <- B %*% fitted$samples$beta[,k] #rnorm(4,0,0.1)
  #w <- exp(w)
  #w <- w / sum(w)
  points( 1:40, w, type="l", col="red", lwd=.5)
}



  
