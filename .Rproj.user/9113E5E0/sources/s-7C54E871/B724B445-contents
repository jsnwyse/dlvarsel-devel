
n <- 500
l <- 40
t <- 1:l

# generate a number of explanatory series
X <- matrix( rnorm( n * l ), ncol = n )
# signal
X[15:25,100:350] <- X[15:25,100:350] + 1.5
xbar <- sum(X)/prod(dim(X))
X <- X - xbar
scx <- sqrt(sum(X^2)/prod(dim(X)))
X <- X / scx


